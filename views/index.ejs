<main id="main-site">
  <!-- Owl-carousel -->
  <section id="banner-area">
    <div class="owl-carousel owl-theme">
      <div class="item">
        <img src="./assets/Banner1.png" alt="Banner1" />
      </div>
      <div class="item">
        <img src="../assets/Banner2.png" alt="Banner2" />
      </div>
      <div class="item">
        <img src="../assets/Banner1.png" alt="Banner3" />
      </div>
    </div>
  </section>
  <!-- !Owl-carousel -->

  <!-- Top Sale -->
  <section id="top-sale">
    <div class="container py-5">
      <h4 class="font-rubik font-size-20">Top Sale</h4>
      <hr />
      <!-- owl carousel -->
      <div class="owl-carousel owl-theme">
        <% top_products.forEach(function(product){ %> <%-
        include('partials/product', {product: product}) %> <% }); %>
      </div>
      <!-- !owl carousel -->
    </div>
  </section>

  <section id="banner">
    <div class="container">
      <h4 class="font-rubik font-size-20">Advertisement</h4>
      <hr />
      <img src="./assets/Banner2.png" alt="Banner1" style="width: 100%" />
    </div>
  </section>

  <section id="new-phones">
    <div class="container">
      <h4 class="font-rubik font-size-20">All Medicine</h4>
      <hr />

      <div class="grid">
        <% all_products.forEach(function(product){ %>

        <div class="grid-item mx-4">
          <div class="item" style="width: 200px">
            <%- include('partials/product', {product: product}) %>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </section>
</main>
